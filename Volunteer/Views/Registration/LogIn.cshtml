@model ApplicationUser
<div class="containerRegistration" style="">
    <form method="post" asp-controller="Registration" asp-action="LogIn">
        <img src="/images/flags-of-ukraine.jpg" style="width:100%; height:170px;">
        <div class="row">
            <div class="col-md-12">
                <div class="row" style="padding:10px; margin-top:5px!important;">
                    <div class="col-md-12">
                        <label>Введіть e-mail</label>
                        <input type="email" class="form-control" name="email" />
                        <label>Введіть пароль</label>
                        <input type="password" class="form-control" name="password"/>
                    </div>
                </div>
                <div class="row" style="margin-top:5px!important;">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-info" style="left: 150px; position: relative; margin-bottom: 10px; border-radius: 5px;">
                            Увійти
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>