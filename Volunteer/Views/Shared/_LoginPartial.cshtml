@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="rd-navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="rd-nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="rd-nav-item">
            <form class="form-inline" asp-controller="Registration" asp-action="LogOut" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="rd-nav-item">
            <a class="nav-link text-dark" asp-controller="Registration" asp-action="SigIn">Register</a>
        </li>
        <li class="rd-nav-item">
            <a class="nav-link text-dark" asp-controller="Registration" asp-action="LogIn">Login</a>
        </li>
    }
</ul>
