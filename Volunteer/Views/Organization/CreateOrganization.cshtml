@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@model Organization
<h2>Створення нової організації</h2>
<hr>
<form method="post" asp-asp-controller="Organization" asp-action="CreateOrganization">
    <label for="Name"></label>
    <input id="Name" class="form-control" asp-for="Name">
    <label for="Desc"></label>
    <textarea id="Desc" class="form-control" asp-for="Description"></textarea>
    <button type="submit" class="btn btn-success">Створити</button>
</form>
